# Firebase Configuration
FIREBASE_PROJECT_ID=protour-dev
FIREBASE_PROJECT_ID_STAGING=protour-staging
FIREBASE_PROJECT_ID_PROD=protour-prod

# Environment
NODE_ENV=development

# External Services Configuration

# SMS Service (Twilio/MSG91)
SMS_API_KEY=your_sms_api_key_here
SMS_API_SECRET=your_sms_api_secret_here
SMS_SENDER_ID=PROTOUR
SMS_TEMPLATE_ID=your_template_id_here

# Email Service (SendGrid/AWS SES)
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM_ADDRESS=noreply@protour.app
EMAIL_FROM_NAME=ProTour

# Push Notifications (FCM)
FCM_SERVER_KEY=your_fcm_server_key_here

# Security
JWT_SECRET=your_jwt_secret_here
ADMIN_EMAIL=admin@protour.app

# Third-party Integrations
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# Analytics
MIXPANEL_TOKEN=your_mixpanel_token_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Debug Settings
ENABLE_DEBUG_LOGS=true
LOG_LEVEL=info

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_SMS_PER_HOUR=100
MAX_EMAIL_PER_HOUR=200