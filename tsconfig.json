{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./apps/mobile" }
  ],
  "files": [],
  "include": [
    "packages/shared/src/**/*",
    "apps/mobile/src/**/*",
    "functions/src/**/*"
  ],
  "exclude": ["node_modules", "dist", "lib", ".next", "android", "ios"]
}
