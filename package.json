{
  "name": "protour-monorepo",
  "version": "1.0.0",
  "description": "ProTour - Offline-first tournament management platform for India",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "functions"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:mobile\" \"npm run dev:functions\"",
    "dev:mobile": "cd apps/mobile && npm run start",
    "dev:web": "cd apps/web && npm run dev",
    "dev:functions": "cd functions && npm run serve",
    "build": "npm run build:mobile && npm run build:web && npm run build:functions",
    "build:mobile": "cd apps/mobile && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:functions": "cd functions && npm run build",
    "test": "npm run test:mobile && npm run test:functions && npm run test:shared",
    "test:ci": "npm run test:mobile:ci && npm run test:functions:ci && npm run test:shared:ci && npm run test:report",
    "test:mobile": "cd apps/mobile && npm run test",
    "test:mobile:ci": "cd apps/mobile && npm run test:ci",
    "test:functions": "cd functions && npm run test",
    "test:functions:ci": "cd functions && npm run test:ci",
    "test:shared": "cd packages/shared && npm run test",
    "test:shared:ci": "cd packages/shared && npm run test:ci",
    "test:e2e": "cd apps/mobile && npm run test:e2e",
    "test:report": "node scripts/test-reporting.js",
    "lint": "npm run lint:mobile && npm run lint:functions && npm run lint:shared",
    "lint:mobile": "cd apps/mobile && npm run lint",
    "lint:functions": "cd functions && npm run lint",
    "lint:shared": "cd packages/shared && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "setup": "node scripts/setup.js",
    "clean": "npm run clean:mobile && npm run clean:functions && npm run clean:shared",
    "clean:mobile": "cd apps/mobile && npm run clean",
    "clean:functions": "cd functions && npm run clean",
    "clean:shared": "cd packages/shared && npm run clean",
    "firebase:emulator": "cd functions && npm run emulator",
    "firebase:emulator:start": "firebase emulators:start --import=./emulator-data --export-on-exit=./emulator-data",
    "firebase:emulator:seed": "node scripts/seed-emulator.js",
    "firebase:setup": "firebase init",
    "mobile:setup": "node scripts/setup-mobile.js",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "mobile:android": "cd apps/mobile && npm run android",
    "mobile:start": "cd apps/mobile && npm run start",
    "version:bump": "node scripts/version-manager.js bump",
    "version:status": "node scripts/version-manager.js status",
    "version:current": "node scripts/version-manager.js current",
    "migrate:run": "node scripts/database-migration.js migrate",
    "migrate:create": "node scripts/database-migration.js create",
    "migrate:status": "node scripts/database-migration.js status",
    "error-tracking:setup": "node scripts/error-tracking-setup.js setup",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/protour.git"
  },
  "keywords": [
    "tournament",
    "management",
    "offline",
    "react-native",
    "firebase",
    "india"
  ],
  "author": "ProTour Team",
  "license": "MIT"
}
